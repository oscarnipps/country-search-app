<resources xmlns:tools="http://schemas.android.com/tools">

    <!--use for light theme-->
    <style name="Theme.CountrySearch" parent="Base.Theme.CountrySearch" >
        <!-- colors -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primary_dark</item>
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorSecondaryVariant">@color/brand_secondary_dark</item>
        <item name="colorOnPrimary">@color/brand_on_primary_color</item>
        <item name="colorOnSecondary">@color/brand_on_secondary_color</item>
        <item name="colorError">@color/design_default_color_error</item>
        <item name="colorOnError">#ffffff</item>
        <item name="colorSurface">@color/brand_light_surface</item>
        <item name="colorOnSurface">@color/brand_on_light_surface</item>
        <item name="android:colorBackground">@color/brand_light_background</item>
        <item name="colorOnBackground">@color/brand_on_light_background</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
    </style>
    
    
    <!-- Base application theme. -->
    <style name="Base.Theme.CountrySearch" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--shape-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.CountrySearch.MediumComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.CountrySearch.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.CountrySearch.LargeComponent</item>

        <!--typography-->
        <item name="textAppearanceHeadline5">@style/TextAppearance.CountrySearch.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.CountrySearch.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.CountrySearch.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.CountrySearch.Body2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.CountrySearch.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.CountrySearch.Subtitle2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.CountrySearch.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.CountrySearch.Overline</item>


        <!--components styles i.e toolbarStyle ,cardViewStyle ,tabStyle e.t.c -->
        <item name="cardViewStyle">@style/Widget.CountrySearch.CardView</item>
        <item name="alertDialogStyle">@style/Widget.CountrySearch.Dialog</item>
        <item name="bottomNavigationStyle">@style/Widget.CountrySearch.BottomNavigationView</item>
        <item name="android:textViewStyle">@style/Widget.CountrySearch.TextView</item>

        <!--system -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>


    <style name="Widget.CountrySearch.CardView" parent="Widget.MaterialComponents.CardView" >
        <item name="shapeAppearance">@style/ShapeAppearance.CountrySearch.MediumComponent</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Widget.CountrySearch.TextView" parent="Widget.MaterialComponents.TextView" >
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.CountrySearch.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Widget.CountrySearch.Dialog" parent="Theme.MaterialComponents.Dialog" >
        <item name="shapeAppearance">@style/ShapeAppearance.CountrySearch.MediumComponent</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.CountrySearch.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

</resources>