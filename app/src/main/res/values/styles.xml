<resources>
    <!-- Base application theme. -->
    <style name="Theme.CountrySearch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- colors -->
        <!-- for the "design_default_* you can also copy the values and use them in the colors.xml file") -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/design_default_color_secondary</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnPrimary">@color/design_default_color_on_primary</item>
        <item name="colorOnSecondary">@color/design_default_color_on_secondary</item>
        <item name="colorError">@color/design_default_color_error</item>
        <item name="colorOnError">#ffffff</item>
        <item name="colorSurface">#ffffff</item>
        <item name="colorOnSurface">#000000</item>
        <item name="android:colorBackground">@color/design_default_color_background</item>
        <item name="colorOnBackground">#000000</item>

        <!--shape-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.CountrySearch.MediumComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.CountrySearch.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.CountrySearch.LargeComponent</item>

        <!--typography-->
        <item name="textAppearanceHeadline5">@style/TextAppearance.CountrySearch.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.CountrySearch.Headline6</item>


        <!--components styles i.e toolbarStyle ,cardViewStyle ,tabStyle e.t.c -->
        <item name="cardViewStyle">@style/Widget.CountrySearch.CardView</item>
        <item name="alertDialogStyle">@style/Widget.CountrySearch.Dialog</item>
        <item name="android:textViewStyle">@style/Widget.CountrySearch.TextView</item>
    </style>

    <style name="Widget.CountrySearch.CardView" parent="Widget.MaterialComponents.CardView" >
        <item name="shapeAppearance">@style/ShapeAppearance.CountrySearch.MediumComponent</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">10dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Widget.CountrySearch.TextView" parent="Widget.MaterialComponents.TextView" >
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Widget.CountrySearch.Dialog" parent="Theme.MaterialComponents.Dialog" >
        <item name="shapeAppearance">@style/ShapeAppearance.CountrySearch.MediumComponent</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>


</resources>